{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "composite": true,
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "nodenext"
  },
  "ts-node": {
    "experimentalResolver": true,
    "files": true
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
